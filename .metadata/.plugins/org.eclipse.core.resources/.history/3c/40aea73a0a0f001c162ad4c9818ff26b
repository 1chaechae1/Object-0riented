package week11;
class TVTest {
	private String manufacturer;
	private int year;
	private int size;
		
	public TVTest(String manufacturer, int year, int size) {
		this.manufacturer = manufacturer;
		this.year = year;		
		this.size = size;
	}
	
	public void show() {
		System.out.print(this.manufacturer + "에서 만든 ");
		System.out.print(this.year + "년형 ");
		System.out.println(this.size + "인치 TV");
	}
	
	public class TV {
	      public static void main(String[] args) {
	         TV myTV = new TV("LG", 2019, 50);
	         myTV.show();
	         myTV = new TV("삼성", 2018, 55);
	         myTV.show();
	         
	      }
	   }