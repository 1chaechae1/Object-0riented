package week11;
class TV {
	String manufacturer;
	int year;
	int size;
		
	public TV(String m, int y, int s) {
		manufacturer = m;
		year = y;		
		size = s;
	}
	
	public void show() {
		System.out.print(manufacturer + "에서 만든 ");
		System.out.print(year + "년형 ");
		System.out.println(size + "인치 TV");
	}
	
	public class TVTest {
	      public void main(String[] args) {
	         TV myTV = new TV("LG", 2019, 50);
	         myTV.show();
	         myTV = new TV("삼성", 2018, 55);
	         myTV.show();
	         }
}